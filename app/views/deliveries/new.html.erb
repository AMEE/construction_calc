<% form_for @delivery, :url => project_deliveries_path do |f| %>
    <%= f.label :name %> <%= f.text_field :name %>
    <%= f.label :delivery_type %> <%= f.select :delivery_type, options_for_delivery_type_select, {}, :onchange => "updateUnits('delivery');" %>
    <%= f.label :amount %> <%= f.text_field :amount %>
    <%= f.select :units, ["(fetching)"] %>
    <%= submit_tag "Create delivery" %>
<% end %>

<% content_for :page_javascript do %>
    units = new Array();
    <% Delivery::TYPE.keys.each do |key| %>
        units['<%= key.to_s %>'] = '<%= options_for_select(Delivery::TYPE[key].unit_options).gsub("\n", "") %>';
    <% end %>
    
    updateUnits('delivery');
    <% if @delivery.units %>
        selectUnits('delivery', '<%= @delivery.units %>');
    <% end %>
<% end %>