<% form_for @commute, :url => project_commutes_path do |f| %>
    <%= f.label :name %> <%= f.text_field :name %>
    <%= f.label :commute_type %> <%= f.select :commute_type, Commute::TYPE.map {|i| [i[1].name, i[0].to_s]}, {}, :onchange => "updateUnits('commute');" %>
    <%= f.label :amount %> <%= f.text_field :amount %>
    <%= f.select :units, Commute::TYPE[Commute::TYPE.keys.first].unit_options %>
    <%= submit_tag "Create Commute" %>
<% end %>

<% content_for :page_javascript do %>
    units = new Array();
    <% Commute::TYPE.keys.each do |key| %>
        units['<%= key.to_s %>'] = '<%= options_for_select(Commute::TYPE[key].unit_options).gsub("\n", "") %>';
    <% end %>
<% end %>