<% form_for @commute, :url => project_commutes_path do |f| %>
    <%= f.label :name %> <%= f.text_field :name %>
    <%= f.label :commute_type %> <%= f.select :commute_type, options_for_commute_type_select, {}, :onchange => "updateUnits('commute');" %>
    <%= f.label :amount %> <%= f.text_field :amount %>
    <%= f.select :units, ["(fetching)"] %>
    <%= submit_tag "Create Commute" %>
<% end %>

<% content_for :page_javascript do %>
    units = new Array();
    <% Commute::TYPE.keys.each do |key| %>
        units['<%= key.to_s %>'] = '<%= options_for_select(Commute::TYPE[key].unit_options).gsub("\n", "") %>';
    <% end %>
    updateUnits('commute');
<% end %>