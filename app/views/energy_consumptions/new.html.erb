<% form_for @energy_consumption, :url => project_energy_consumptions_path do |f| %>
    <%= f.label :name %> <%= f.text_field :name %>
    <%= f.label :energy_consumption_type %> <%= f.select :energy_consumption_type, options_for_energy_consumption_type_select, {}, :onchange => "updateUnits('energy_consumption');" %>
    <%= f.label :amount %> <%= f.text_field :amount %>
    <%= f.select :units, ["(fetching)"] %>
    <%= submit_tag "Create Energy Consumption" %>
<% end %>

<% content_for :page_javascript do %>
    units = new Array();
    <% EnergyConsumption::TYPE.keys.each do |key| %>
        units['<%= key.to_s %>'] = '<%= options_for_select(EnergyConsumption::TYPE[key].unit_options).gsub("\n", "") %>';
    <% end %>
    
    updateUnits('energy_consumption');
    <% if @energy_consumption.units %>
        selectUnits('energy_consumption', '<%= @energy_consumption.units %>');
    <% end %>
<% end %>