<div id="content" class="content">
  <table>
    <tr class="list-header waste-background">
      <td>Type (and disposal method)</td>
      <td>Weight</td>
      <td>Emissions</td>
    </tr>
    <% if @wastes.size > 0 %>
      <%= render :partial => "waste", :collection => @wastes %>
    <% else %>
      <tr>
        <td colspan="3" style="text-align: center;">No waste management - click 'Add' to get started</td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @wastes %>
</div>