<% form_for @material, :url => project_materials_path do |f| %>
    <%= f.label :name %> <%= f.text_field :name %>
    <%= f.label :material_type %> <%= f.select :material_type, options_for_material_type_select, {}, :onchange => "updateUnits('material');" %>
    <%= f.label :amount %> <%= f.text_field :amount %>
    <%= f.select :units, ["(fetching)"] %>
    <%= submit_tag "Create material" %>
<% end %>

<% content_for :page_javascript do %>
    units = new Array();
    <% Material::TYPE.keys.each do |key| %>
        units['<%= key.to_s %>'] = '<%= options_for_select(Material::TYPE[key].unit_options).gsub("\n", "") %>';
    <% end %>
    
    updateUnits('material');
    <% if @material.units %>
        selectUnits('material', '<%= @material.units %>');
    <% end %>
<% end %>